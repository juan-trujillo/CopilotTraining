{
  "name": "GitHub Copilot Training Workshop",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-20-bullseye",
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        // GitHub Copilot extensions (required for training)
        "GitHub.copilot",
        "GitHub.copilot-chat",
        
        // Markdown support with Mermaid diagrams
        "bierner.markdown-mermaid",
        "yzhang.markdown-all-in-one",
        
        // Development tools for FanHub
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        
        // Optional but helpful
        "eamodio.gitlens"
      ],
      
      "settings": {
        // Ensure Copilot is enabled
        "github.copilot.enable": {
          "*": true,
          "markdown": true,
          "plaintext": false
        },
        
        // Enable Agent Skills support (Module 5)
        "chat.useAgentSkills": true,
        
        // Enable experimental custom agents in subagents (Module 7)
        "chat.customAgentInSubagent.enabled": true,
        
        // Markdown settings
        "markdown.extension.toc.levels": "2..6",
        "markdown.preview.breaks": true,
        
        // Editor settings for training content
        "editor.wordWrap": "on",
        "editor.formatOnSave": true,
        "files.trimTrailingWhitespace": true,
        
        // Prettier for consistent formatting
        "[markdown]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": false
        },
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        }
      }
    }
  },

  // Forward ports for FanHub application
  "forwardPorts": [3000, 3001, 5432],
  "portsAttributes": {
    "3000": {
      "label": "FanHub Frontend",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "FanHub Backend API",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    }
  },

  // Post-create command to set up the environment
  "postCreateCommand": "npm install",

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "remoteUser": "node",

  // Workspace mount - preserve git history
  "mounts": [
    "source=${localWorkspaceFolder}/.git,target=${containerWorkspaceFolder}/.git,type=bind,consistency=cached"
  ]
}
