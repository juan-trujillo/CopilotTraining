{
  "version": 1,
  "hooks": {
    "sessionStart": [
      {
        "type": "command",
        "bash": "./scripts/log-session-start.sh",
        "powershell": "./scripts/log-session-start.ps1",
        "cwd": ".github/hooks",
        "timeoutSec": 10
      }
    ],
    "userPromptSubmitted": [
      {
        "type": "command",
        "bash": "./scripts/log-prompt.sh",
        "powershell": "./scripts/log-prompt.ps1",
        "cwd": ".github/hooks",
        "env": {
          "LOG_LEVEL": "INFO"
        }
      }
    ],
    "preToolUse": [
      {
        "type": "command",
        "bash": "./scripts/log-tool-pre.sh",
        "powershell": "./scripts/log-tool-pre.ps1",
        "cwd": ".github/hooks"
      }
    ],
    "postToolUse": [
      {
        "type": "command",
        "bash": "./scripts/log-tool-post.sh",
        "powershell": "./scripts/log-tool-post.ps1",
        "cwd": ".github/hooks"
      }
    ],
    "errorOccurred": [
      {
        "type": "command",
        "bash": "./scripts/log-error.sh",
        "powershell": "./scripts/log-error.ps1",
        "cwd": ".github/hooks"
      }
    ],
    "sessionEnd": [
      {
        "type": "command",
        "bash": "./scripts/log-session-end.sh",
        "powershell": "./scripts/log-session-end.ps1",
        "cwd": ".github/hooks",
        "timeoutSec": 15
      }
    ]
  }
}
